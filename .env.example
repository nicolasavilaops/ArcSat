# ========================================
# ARCSAT - Environment Configuration
# ========================================

# Application Settings
NODE_ENV=production
PORT=3000
API_VERSION=v1
BASE_URL=https://www.arcsat.com.br

# ========================================
# MONGODB CONFIGURATION
# ========================================
MONGODB_URI=mongodb://localhost:27017/arcsat
MONGODB_DB_NAME=arcsat
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2

# Collections
COLLECTION_CLIENTS=clients
COLLECTION_CONTACTS=contacts
COLLECTION_VINCULOS=vinculos
COLLECTION_CACHE=cache

# ========================================
# REDIS CACHE
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600
CACHE_ENABLED=true

# ========================================
# GOOGLE MAPS API
# ========================================
GOOGLE_MAPS_API_KEY=sua_chave_aqui
GOOGLE_MAPS_GEOCODING_LIMIT=50
GOOGLE_MAPS_TIMEOUT=5000

# ========================================
# BRASIL API (APIs Gratuitas do Governo)
# ========================================
# https://brasilapi.com.br/
BRASILAPI_BASE_URL=https://brasilapi.com.br/api
BRASILAPI_TIMEOUT=5000
BRASILAPI_RETRY=3

# Endpoints dispon√≠veis:
# - /cnpj/v1/{cnpj}
# - /cep/v2/{cep}
# - /banks/v1
# - /fipe/preco/v1/{fipeCode}
# - /ibge/municipios/v1/{uf}

# ========================================
# RECEITA WS (Backup para CNPJ)
# ========================================
RECEITAWS_BASE_URL=https://www.receitaws.com.br/v1
RECEITAWS_TIMEOUT=10000
RECEITAWS_RATE_LIMIT=3

# ========================================
# AVILA API (Swagger Integration)
# ========================================
AVILA_API_BASE_URL=https://api.avila.inc
AVILA_API_KEY=sua_chave_avila_api
AVILA_API_TIMEOUT=10000
AVILA_API_VERSION=v1

# ========================================
# GITHUB INTEGRATION
# ========================================
GITHUB_TOKEN=ghp_seu_token_aqui
GITHUB_REPO=nicolasavilaops/ArcSat
GITHUB_BRANCH=main
GITHUB_WEBHOOK_SECRET=seu_webhook_secret

# GitHub Actions
GITHUB_ACTIONS_ENABLED=true
GITHUB_DEPLOY_ON_PUSH=true

# ========================================
# SESSION & SECURITY
# ========================================
SESSION_SECRET=seu_segredo_super_secreto_aqui_min_32_chars
JWT_SECRET=seu_jwt_secret_super_secreto_aqui
JWT_EXPIRES_IN=24h
CORS_ORIGIN=https://www.arcsat.com.br,https://nicolasavilaops.github.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# ANALYTICS & MONITORING
# ========================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://seu_sentry_dsn@sentry.io/projeto

# ========================================
# CONTACT & SUPPORT
# ========================================
CONTACT_EMAIL=contato@arcsat.com.br
SUPPORT_PHONE=+5517997811471
SUPPORT_WHATSAPP=https://wa.me/5517997811471

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/arcsat.log

# ========================================
# FEATURES FLAGS
# ========================================
FEATURE_GEOPROCESSING=true
FEATURE_CNPJ_ENRICHMENT=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_SMS_NOTIFICATIONS=false
